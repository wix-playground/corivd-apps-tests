{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true
  },
  "include": [
    "./__tests__/**/*.ts",
    "./src/**/*.spec.tsx"
  ],
  "files": [
    "./node_modules/yoshi/types.d.ts",
    "./node_modules/jest-yoshi-preset/types.d.ts",
    "./node_modules/@wix/wix-bootstrap-renderer/declarations.d.ts",
    "./src/external-types.d.ts",
    "./src/test-types.d.ts",
    "./src/server.ts",
    "./src/client.tsx"
  ]
}
